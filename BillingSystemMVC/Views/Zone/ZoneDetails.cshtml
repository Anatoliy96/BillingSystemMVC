@model BillingSystemMVC.Model.Zone

@{
    ViewData["Title"] = "ZoneDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Информация за зоната</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Town)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Town)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Owner)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Owner)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tariff)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tariff)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WorkingIPAdresses)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkingIPAdresses)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IDNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IDNumber)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Промени зона", "UpdateZone", "Zone", new { IDNumber = Model.IDNumber }) |
    @using (Html.BeginForm("DeleteZone", "Zone", new { IDNumber = Model.IDNumber }))
    {
        <input type="submit" value="Изтрий зоната"
               onclick="return confirm('Сигурен ли сте,че искате да изтриете зоната?');" />
    }
    <a asp-action="Index">Back to List</a>
</div>
