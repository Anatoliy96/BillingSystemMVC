@model BillingSystemMVC.Model.Zone

@{
    ViewData["Title"] = "UpdateZone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактиране на зона</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("UpdateZone", "Zone")) 
        { 
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Town" class="control-label"></label>
                    <input asp-for="Town" class="form-control" name="Town" value="@Model.Town"/>
                    <span asp-validation-for="Town" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Owner" class="control-label"></label>
                    <input asp-for="Owner" class="form-control" name="Owner" value="@Model.Owner"/>
                    <span asp-validation-for="Owner" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tariff" class="control-label"></label>
                    <input asp-for="Tariff" class="form-control" />
                    <span asp-validation-for="Tariff" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkingIPAdresses" class="control-label"></label>
                    <input asp-for="WorkingIPAdresses" class="form-control" />
                    <span asp-validation-for="WorkingIPAdresses" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IDNumber" class="control-label"></label>
                    <input asp-for="IDNumber" class="form-control" />
                    <span asp-validation-for="IDNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }
            
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

