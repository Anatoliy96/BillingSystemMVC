@model IEnumerable<BillingSystemMVC.Model.Client>
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Плащане</h1>


<div class="form-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-offset-4 col-lg-4 col-sm-offset-3 col-sm-6">
                <div class="form-container">
                    <h3 class="title">Детайли за плащането</h3>
                    <form asp-action="Register" class="form-horizontal">
                        <div class="form-group">
                            <select name="ClientId" id="clients">
                                @foreach (var c in Model)
                                {
                                    <option value="@c.IDNumber">@c.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Amount" class="form-label">Сума</label>
                            <input type="number" name="Amount" class="form-control" id="exampleFormControlInput1" placeholder="Amount">
                        </div>
                        <button class="btn">Плати</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



