@model BillingSystemMVC.Model.Tariff

@{
    ViewData["Title"] = "AddTariff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавяне на тарифа</h1>

@using (Html.BeginForm("AddTariff", "Tariff"))
{
    <div class="form-group">
        <label for="Name">Име</label>
        <input type="text" class="form-control" id="Name" name="Name">
    </div>
    <div class="form-group">
        <label for="Price">Цена</label>
        <input type="text" class="form-control" id="Price" name="Price">
    </div>
    <div class="form-group">
        <label for="InternetSpeed">Скорост</label>
        <input type="text" class="form-control" id="InternetSpeed" name="InternetSpeed">
    </div>
    <button type="submit" class="btn btn-primary">Добави</button>
}

