@model BillingSystemMVC.Model.Tariff

@{
    ViewData["Title"] = "AddTariff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавяне на тарифа</h1>

<style>
    .form-group {
        border: 1px solid;
        border-radius: 7px;
        text-indent: initial;
        padding: 10px;
        width: 50%;
        text-align: left;
        font-size: 100%;
        font-family: Verdana, sans-serif;
        margin-bottom: 0rem;
    }

    .btn {
        margin: 5px;
    }

    body .form-group {
        background: rgb(238,174,202);
        background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
    }
</style>

@using (Html.BeginForm("AddTariff", "Tariff"))
{
    <div class="form-group">
        <label for="Name">Име</label>
        <input type="text" class="form-control" id="Name" name="Name">
    </div>
    <div class="form-group">
        <label for="Price">Цена</label>
        <input type="text" class="form-control" id="Price" name="Price">
    </div>
    <div class="form-group">
        <label for="InternetSpeed">Скорост</label>
        <input type="text" class="form-control" id="InternetSpeed" name="InternetSpeed">
    </div>
    <button type="submit" class="btn btn-primary">Добави</button>
}

