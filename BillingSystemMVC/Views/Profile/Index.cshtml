@model IEnumerable<BillingSystemMVC.Model.Profile>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div>
        <input type="button"
               value="Добави Профил"
               onclick="location.href='@Url.Action("AddProfile", "Profile" )'" />
    </div>
    <div>
        @Html.ActionLink("Всички профили", "ViewAllRegisteredProfiles", "Profile")
    </div>
</div>

<h1>Информация за Профила</h1>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Номер</th>
            <th scope="col">Потребител</th>
            <th scope="col">Потребителски тип</th>
            <th scope="col">Име</th>
            <th scope="col">Телефон</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var p in Model)
        {
            <tr>
                <td>@p.IDNumber</td>
                <td>@Html.ActionLink(p.UserName, "ProfileDetails", "Profile", new { id = p.IDNumber })</td>
                <td>@p.UserNameType</td>
                <td>@p.Name</td>
                <td>@p.PhoneNumber</td>

            </tr>
        }
    
</tbody>
</table>