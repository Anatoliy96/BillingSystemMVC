@model BillingSystemMVC.Model.Profile

@{
    ViewData["Title"] = "UpdateProfile";
}

<h1>UpdateProfile</h1>
<style>

    .row .col-md-4 .form-group {
        border: 1px solid;
        border-radius: 7px;
        text-indent: initial;
        padding: 10px;
        width: 95%;
        text-align: left;
        font-size: 100%;
        font-family: Verdana, sans-serif;
        margin-bottom: 0rem;
    }

    body .form-group {
        background: rgb(238,174,202);
        background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
    }
</style>

<h4>Профил</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("UpdateProfile", "Profile"))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" name="PhoneNumber" value="@Model.PhoneNumber"/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" name="Name" value="@Model.Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IDNumber" class="control-label"></label>
            <input type="hidden" asp-for="IDNumber" class="form-control" name="IDNumber" value="@Model.IDNumber" />
        </div>
        <div class="btn">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
